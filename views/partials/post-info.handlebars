<article class="post">
  <div class="title">
    <div class="postTitle-wrapper">
      <h3> <a href="/post/{{id}}"> {{title}} </a> 
      </h3>
          <div class="meta">created on
          {{format_date created_at}}
        </div>
        <a id="comment-name" href="/post/{{id}}">{{comments.length}} {{format_plural "comment"
          comments.length}}</a>
    </div>
    <div class="post-wrapper">
      <p>{{post_content}}</p>
    </div>
  </div>
</article>